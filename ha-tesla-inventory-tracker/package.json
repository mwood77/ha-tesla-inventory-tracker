{
    "name": "tesla_cpo_inventory_tracker",
    "version": "1.0.0",
    "description": "Monitor Tesla CPO inventory by VIN(s) for price and availability changes",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint",
        "lint:fix": "eslint . --fix"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "dotenv": "^16.3.1",
        "eslint": "^9.17.0",
        "js-yaml": "4.1.0",
        "prettier": "^3.4.2",
        "sqlite3": "^5.1.6"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "eslintConfig": {
        "env": {
          "browser": true,
          "node": true,
          "es2021": true
        },
        "extends": "airbnb-base",
        "parserOptions": {
          "ecmaVersion": 12,
          "sourceType": "module"
        },
        "rules": {
          "no-console": "warn",
          "eqeqeq": "error",
          "indent": ["error", 2],
          "semi": ["error", "always"],
          "quotes": ["error", "single"]
        }
      }
}
